
<div class="form-group">
  <label for="device-name">Name</label>
  <input type="text" class="form-control" id="device-name" name="record[name]" value="<%=@record[:name]%>" placeholder="Name">
</div>
<div class="form-group">
  <label for="device-ttile">Title</label>
  <input type="text" class="form-control" id="device-proce" name="record[title]"  value="<%=@record[:description]%>" placeholder="Description">
</div>
<div class="form-group">
  <label for="device-ttile">Parameters</label>
  <textarea class="form-control" rows="3" name="record[params]" ><%=@record[:params]%></textarea>
</div>
<div class="form-group">
  <label for="device-type">Type</label>

	<select class="form-control" id="product-product-category-id"  name="record[type]" >
 	 <%
	list = %w{Terminal Kitchen Vending Printer }

   %>
	<% for c in list %>
	  <option value="<%=c%>"><%=c%></option>
  <% end %>
	</select>
</div>
