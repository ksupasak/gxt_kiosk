<%=@record.inspect %>
  <div class="form-group">
    <label for="product-name">Product Name</label>
    <input type="text" class="form-control" id="product-name" name="product[name]" placeholder="Name" value="<%=@record.name%>">
  </div>
  <div class="form-group">
    <label for="product-description">Product Description</label>
    <input type="text" class="form-control" id="product-description"  name="product[description]" placeholder="Descritpion" value="<%=@record.description%>">
  </div>

  <div class="form-group">
    <label for="product-description">Category</label>




	<select class="form-control" id="product-product-category-id"  name="product[product_category_id]" >
	<% for c in ProductCategory.all %>
	  <option value="<%=c.id%>"><%=c.name%></option>
    <% end %>
	</select>


  </div>



  <div class="form-group">
    <label for="product-price">Price</label>
    <input type="text" class="form-control" id="product-proce" name="product[price]" placeholder="0" value="<%=@record.price%>">
  </div>
<% 3.times do |i| 
	i+=1%>
  <div class="form-group">
    <label for="product-image-<%=i%>">Image <%=i%></label>
    <input type="file" id="product-mimage-<%=i%>" name="product[image_<%=i%>]">
  </div>
<% end %>

